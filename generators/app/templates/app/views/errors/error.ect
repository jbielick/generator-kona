<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title><%- @status %> - Error: <%- @error %></title>
  <style>
    body {font-family: sans-serif;}
  </style>
</head>
<body>
  <% if @env == 'development' : %>
    <div>
      <h3>Message:</h3>
      <br>
      <pre><code><%- @error %></code></pre>
    </div>
    <br>
    <div>
      <h3>Stack:</h3>
      <br>
      <pre><code><%- @stack %></code></pre>
    </div>
  <% else : %>
    <div>
      <h3>An error has occurred.</h3>
    </div>
  <% end %>
</body>